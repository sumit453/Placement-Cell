<h1>Add Student</h1>
<form method="post" action="/students" class="mt-3">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Name</label>
      <input class="form-control" name="name" required />
    </div>
    <div class="col-md-6">
      <label class="form-label">Roll Number</label>
      <input class="form-control" name="rollNumber" required />
    </div>
    <div class="col-md-6">
      <label class="form-label">College</label>
      <input class="form-control" name="college" required />
    </div>
    <div class="col-md-3">
      <label class="form-label">Batch</label>
      <input class="form-control" name="batch" required />
    </div>
    <div class="col-md-3">
      <label class="form-label">Status</label>
      <select class="form-select" name="status">
        <option value="not_placed">not_placed</option>
        <option value="placed">placed</option>
      </select>
    </div>
    <div class="col-md-4">
      <label class="form-label">DSA Final Score</label>
      <input class="form-control" name="dsa" type="number" min="0" max="100" />
    </div>
    <div class="col-md-4">
      <label class="form-label">WebD Final Score</label>
      <input class="form-control" name="webd" type="number" min="0" max="100" />
    </div>
    <div class="col-md-4">
      <label class="form-label">React Final Score</label>
      <input
        class="form-control"
        name="react"
        type="number"
        min="0"
        max="100"
      />
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" href="/students">Cancel</a>
  </div>
</form>
