{
  "name": "placement-cell",
  "version": "1.0.0",
  "description": "Placement Cell web application (Express + EJS + MongoDB)",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env --watch app.js",
    "start": "node --env-file=.env app.js",
    "seed": "node --env-file=.env scripts/seed.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
