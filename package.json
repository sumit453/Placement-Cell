    "connect-flash": "0.1.1",
    "csurf": "1.11.0",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "ejs": "3.1.10",
    "express": "4.19.2",
    "express-ejs-layouts": "2.5.1",
    "express-session": "1.18.0",
    "fast-csv": "4.3.6",
    "helmet": "7.1.0",
    "method-override": "3.0.0",
    "mongoose": "8.6.2",
    "morgan": "1.10.0",
    "node-fetch": "3.3.2",
    "passport": "0.7.0",
    "passport-local": "1.0.0"
